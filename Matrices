MATRIX ADDITION :-

#include<stdio.h>
int main ()
{
    int A[2][2]={1,5,7,3},B[2][2]={12,1,5,19},C[2][2]={0,0,0,0};
    int i,j;
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            C[i][j]=A[i][j]+B[i][j];
        }
    }
     for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            printf("%d\t",C[i][j]);
        }
         printf("\n");
    }
    
    return 0;
}



13	6	
12	22	


=== Code Execution Successful ===


MATRIX SUBTRACTION :-

#include<stdio.h>
int main ()
{
    int A[2][2]={10,8,7,12},B[2][2]={8,2,5,6},C[2][2]={0,0,0,0};
    int i,j;
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            C[i][j]=A[i][j]-B[i][j];
        }
    }
     for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            printf("%d\t",C[i][j]);
        }
         printf("\n");
    }
    
    return 0;
}

2	6	
2	6	


=== Code Execution Successful ===


MATRIX TRANSPOSE :-

#include<stdio.h>
int main ()
{
    int A[3][3]={1,2,3,4,5,6,7,8,9},B[3][3]={0,0,0,0};
    int i,j;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
           B[j][i]=A[i][j];
        }
    }
     for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
           printf("%d\t",B[i][j]);
        }
         printf("\n");
    }
    
    return 0;
}


1	4	7	
2	5	8	
3	6	9	


=== Code Execution Successful ===

MATRIX MULTIPLICATION :-

#include<stdio.h>
int main ()
{
    int A[3][3]={1,2,3,4,5,6,7,8,9},B[3][3]={9,8,7,6,5,4,3,2,1},C[3][3]={0,0,0,0,0,0,0,0,0};
    int i,j,k;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
           for(k=0;k<3;k++)
           {
           C[i][j]+=A[i][k]*B[k][j];
           }
        }
    }
     for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
           printf("%d\t",C[i][j]);
        }
        printf("\n");
    }
    
    return 0;
}

30	24	18	
84	69	54	
138	114	90	


=== Code Execution Successful ===
